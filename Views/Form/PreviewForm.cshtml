@model FormModel

<h2>@Model.FormTitle</h2>

<form method="post" asp-action="SubmitForm" asp-controller="Form">
    <input type="hidden" name="formId" value="@Model.FormID" />

    @for (int i = 0; i < Model.Fields.Count; i++)
    {
        var field = Model.Fields[i];
        <div class="mb-3">
            <label>@field.Label</label>
            @if (field.FieldType == "text")
            {
                <input type="text" name="Fields[@i].UserValue" class="form-control" />
            }
            else if (field.FieldType == "number")
            {
                <input type="number" name="Fields[@i].UserValue" class="form-control" />
            }
            <input type="hidden" name="Fields[@i].FieldID" value="@field.FieldID" />
        </div>
    }

    <button type="submit" class="btn btn-primary">Submit</button>



</form>
